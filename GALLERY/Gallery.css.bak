/* CSS for main navigation */

nav {
    background-color: #C41919;
    align-items: center;
    padding: 14px 16px;
    overflow: hidden;
    margin-top: 0px;
    

	
	
}
nav a {
    padding: 40px;
    text-align: center;
   
    color: white;
    margin-left: auto;
    margin-right: auto;
	
}


@media screen and (max-width: 500px) {
nav a {
    float: none;
    display: block;
    width: 100%;
    text-align: left;
  }
  
}

.link:hover{
      cursor:pointer;
       background:black;
       color:white;
       padding: 40px;

}

#logo {
  display: block;
  margin-left: auto;
  margin-right: auto;
  border-radius: 8px;
  height: 200px;
  width: 200px;
  margin-top: 10px;
  
}

.fix{
	align-items: center;
    text-align: center;
